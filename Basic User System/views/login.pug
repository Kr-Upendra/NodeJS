extends base 

block content 
    main.main(data-isform="true")
        .main__form
            .form__name
                h3 Login Form
            form.form.loginForm
                input.inputbox.loginEmail(type='email', placeholder='Email', required='', name='email')
                input.inputbox.loginPassword(type='password', placeholder='Password', required='', name='password')
                input.inputbox.submitbtn(type='submit', value='Login')
            .textbtn
                span Forgot your password?
                span.linktext
                    a(href='/signup') Forgot
            .terms